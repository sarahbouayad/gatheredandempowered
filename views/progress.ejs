              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <h1>Progress</h1>
    <h2 class=""><a href="/profile">Profile</a></h2>
    
    <div class="container">
        <div class="row mt-5">
            <div class="col-6">
                <div>
                    <p><strong>User Name</strong>: <%= user.userName %></p>
                    <p><strong>Email</strong>: <%= user.email %></p>
                    <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                </div>
            </div>
        </div>
      </div>

      <form class="tasks" action="/progress/createTask/" method="POST">
        <input type="text" placeholder="Enter Name" name="clientName" style="margin: 1%;">
        <input type="text" placeholder="temptext" name="taskDescription">
        <button class="submit btn-sm btn-light" type="submit">Submit</button>
    </form>

      <div class="mt-5">
        <h2>Pending Tasks</h2>
        <h6>Once tasks are completed, mark it as complete</h6>
        <br>
        <hr>
        <% if(tasks.length == 0) {%>
          <p class="p">No Tasks!</p>
        <%} %>
        <ul>
          <% for(var i=0; i<tasks.length; i++) { %>
            <div class="pendingTasks">
            <li class="col-6 justify-content-between mt-5">
              <span>Name: <%= tasks[i].clientName %></span>
              <%= tasks[i].taskDescription %> 


              <form 
                class="col-1"
                action="/progress/completeTasks/<%= tasks[i].id %>?_method=PUT"
                method="POST"
              >
              <button class="btn btn-primary bi bi-check-square-fill" type="submit"></button>
            </form>

            </li>
          </div>
        <% } %> 
        </ul>
      
      </div>
    </div>
  <div class="col-6">
    <ul class="row list-unstyled">
      <h2>Completed Tasks</h2>
      <h6>Keep Track Completed Tasks</h6>
      <br>
      <br>
      <hr>
      <li>
      <% for(let i=0; i < completeTasks.length; i++) { %>
        <span>completed: <%= completeTasks[i].clientName %> task</span>
        <p>Task: <%= completeTasks[i].taskDescription %></p>
        <!-- using form to pass the id of the post as a query parameter to be able to target which post to delete -->
        <form
        action="/progress/deleteTask/<%= completeTasks[i].id %>?_method=DELETE" 
        method="POST" 
        class="col-3"
        >
        <button class="btn btn-primary bi bi-trash" type="submit"></button>
        </form>
      </li>
      <% } %> 
    </ul>
  </div>  
</div>
</div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>   
