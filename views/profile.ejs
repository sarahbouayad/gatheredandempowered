<!DOCTYPE html>
<html>

<head>
  <title>Dashboard</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
  <link rel="stylesheet" href="css/style.css" />
  <script src="https://kit.fontawesome.com/43daf91e79.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  <link
    href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Montserrat:wght@200;300;500&family=Roboto:wght@100;300&&family=Tangerine&display=swap"
    rel="stylesheet">
</head>

<body style="background-color: rgba(248, 242, 242, 0.519); ">
  <!-- navigation bar -->

  <nav class="navbar navbar-expand-lg navbar-dark shadow-sm bg-dark">
    <div class="container-fluid">
      <button 
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbar"
      aria-controls="navbar"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

      <!-- logo -->
      <a class="navbar-brand" href="/profile">
        <span class="ml-3 font-weight-bold"><img src="imgs/community-icon.png" style="height: 40px" /></span>
      </a>
      <!-- collapisble wrapper -->
      <div class="collapse navbar-collapse" id="navbar">
        <!-- left links -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item px-lg-2">
            <a class="nav-link active" aria-current="page" href="/profile">Dashboard</a>
          </li>
          <li class="nav-item px-lg-2">
            <a class="nav-link" href="/convert">Translate PDF</a>
          </li>
          <li class="nav-item px-lg-2">
            <a class="nav-link" href="/spaces">Sanctuary Spaces</a>
          </li>
          <li class="nav-item px-lg-2">
            <a class="nav-link" href="/progress">Progress</a>
          </li>
        </ul>
      </div>
      <!-- right links -->
      <div class="d-flex align-items-center">
        <ul class="navbar-nav ml-auto mt-3 mt-lg-0">
          <li class="nav-item px-lg-2">
            <a class="nav-link" href="/logout"></span>Logout</a>
          </li>
        </ul>
      </div>

    </div>
  </nav>



  <!-- video header -->



  <!-- cols for lists -->



  <div class="container-fluid">
    <br />
    <div class="row">
      <div class="col-sm">
        <% if (user.email) { %>
          <form class="”form-inline”" class="" action="/messages" method="POST" role="form">
            <div class="form-group">
              <div class="col-6 col-sm-4">
                <h4 class="welcomeBackText">
                  Welcome Back,
                 <strong><%= user.userName %></strong>!<br />
                </h4>
              </div>
            </div>
          </form>
      </div>
    </div>
  </div>



    <header>
      <div class="overlay"></div>
      <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
        <source src="imgs/dashboardvideo.mp4" type="video/mp4">
      </video>
      <div class="container h-100">
        <div class="d-flex text-center h-100">
          <div class="my-auto w-100 text-white">
            <h1 class="display-3 gatheredVideoOverlay">Gathered & Empowered</h1>
          </div>
        </div>
      </div>
    </header>


    <br>
    <br>
    <br>
    <div class="container">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <div class="col-md-6 col-lg-4">
          <div class="card">
            <img src="/imgs/translate.jpg" class="card-img-top img-fluid" alt="card" />
            <div class="card-body">
              <h5 class="card-title">Translate Your PDFs</h5>
              <p class="card-text">The tool for all your needs!</p>
              <a href="/convert" class="btn btn-outline-danger profileBtn">Let's Get Translating!</a>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card">
            <img src="/imgs/unity.jpg" class="card-img-top img-fluid" alt="card" />
            <div class="card-body">
              <h5 class="card-title">Sanctuary Spaces</h5>
              <p class="card-text">Find a community anywhere.</p>
              <a href="/spaces" class="btn btn-outline-danger profileBtn">Start Chatting!</a>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card">
            <img src="/imgs/passport.jpg" class="card-img-top img-fluid" alt="card" />
            <div class="card-body">
              <h5 class="card-title">Track Your Journey</h5>
              <p class="card-text">You'll get there.</p>
              <a href="/progress" class="btn btn-outline-danger profileBtn">Navigate to Progress!</a>
            </div>
          </div>
        </div>
      </div>

    </div>


    <br>


    <br />
  <% } %>
  <br>
  <br>
  <br>
  <br>

  <footer class="bg-dark text-center text-white">
    <!-- Grid container -->
    <div class="container p-4 pb-0">
      <!-- Section: Social media -->
      <section class="mb-4">
        <!-- Twitter -->
        <a class="btn btn-outline-light btn-floating m-1" target="_blank" rel="noopener noreferrer" href="https://twitter.com/sarahbouayad" role="button"
          ><i class="fab fa-twitter social"></i
        ></a>
  
        <!-- Linkedin -->
        <a class="btn btn-outline-light btn-floating m-1" target="_blank" rel="noopener noreferrer" href="https://www.linkedin.com/in/sarahbouayad/" role="button"
          ><i class="fab fa-linkedin-in social"></i
        ></a>
  
        <!-- Github -->
        <a class="btn btn-outline-light btn-floating m-1" target="_blank" rel="noopener noreferrer" href="https://github.com/sarahbouayad" role="button"
          ><i class="fab fa-github social"></i
        ></a>
      </section>
      <!-- Section: Social media -->
    </div>
    <!-- Grid container -->
  
    <!-- Copyright -->
    <div class="text-center p-3 footerText" style="background-color: rgba(6, 6, 6, 0.2);">
      © 2022 Copyright:
      <a class="text-white footerText" target="_blank" rel="noopener noreferrer" href="https://www.sarahbouayad.com/">Sarah Bouayad</a>
    </div>
    <!-- Copyright -->
  </footer>
  
    <script src="main.js"></script>
    <script src="https://unpkg.com/@popperjs/core@2/dist/umd/popper.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"></script>
</body>

</html>