    <h1>STORED TEXTS</h1>
    
    <ul>
        <% for(let i=0; i < texts.length; i++) { %>
          <li>
            <textarea><%= texts[i].extractedText %>
            </textarea>

            <form
            action="/convert/deleteStoredTexts/<%= texts[i]._id %>?_method=DELETE" 
            method="POST" 
            class="col-3"
            >
              <button class="btn btn-primary bi bi-trash" type="submit"></button>
            </form>
            <% } %>
          </li>
            
    </ul>





